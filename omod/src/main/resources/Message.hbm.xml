<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class table="messaging_messages" name="org.openmrs.module.messaging.domain.Message">
       <id name="messageId" type="int" column="message_id"  unsaved-value="0">
				<generator class="native" />
		</id>
		
		<property name="uuid" type="string" length="38" not-null="true" />
		
        <property name="content" type="text"/>
        <property name="subject" type="java.lang.String"/>
        
        <many-to-one name="sender" class="org.openmrs.Person" lazy="false"/>
        
		<set name="to" inverse="true" table="messaging_message_recipients" cascade="all">
        	<key>
        		<column name="message" not-null="true" />
        	</key>
        	<one-to-many class="org.openmrs.module.messaging.domain.MessageRecipient" />
     	</set>
     	
		<many-to-one name="inReplyTo" class="org.openmrs.module.messaging.domain.Message" column="in_reply_to" cascade="none"/>
		
        <property name="date" type="java.util.Date" length="19"/>        		
    </class>
</hibernate-mapping>
